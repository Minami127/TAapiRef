<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/line_bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/f.postItem"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/line_bottom"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/f_thumbNail"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_photo_24"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomCorner" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@id/f_thumbNail"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/f_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목"
                        android:textSize="16dp"
                        android:layout_marginTop="7dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:id="@+id/f_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#90CCCCCC"
                            android:text="카테고리"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="·"
                            android:textColor="#90CCCCCC"
                            android:textSize="15dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp" />

                        <TextView
                            android:id="@+id/f_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간"
                            android:textSize="13dp"
                            android:textColor="#90CCCCCC" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/f_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textSize="16dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold" />
                </LinearLayout>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>