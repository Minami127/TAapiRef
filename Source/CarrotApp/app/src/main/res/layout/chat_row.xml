<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/line_bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatItem"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/line_bottom"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_photo_24"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomCorner" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:id="@+id/chat_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닉네임"
                            android:textSize="16dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/chat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간"
                            android:textSize="13dp"
                            android:textColor="#90CCCCCC"
                            android:layout_marginTop="7dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/last_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마지막 채팅 내용"
                        android:layout_marginTop="5dp"
                        android:textSize="14dp"/>

                </LinearLayout>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>




</LinearLayout>